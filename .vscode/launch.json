    "version": "0.2.0",
    "configurations": [
        {
            "name": "RunServiceOnce ELFPARSER",
            "type": "debugpy",
            "request": "launch",
            "module": "assemblyline_v4_service.dev.run_service_once",
            "cwd": "${workspaceFolder}",
            "args": [
                "-d",
                "elfparser.elfparser.ELFPARSER",
                "${file}"
            ],
            "justMyCode": false,
        },
        {
            "name": "[Service] ELFPARSER - Privileged",
            "type": "debugpy",
            "request": "launch",
            "module": "assemblyline_v4_service.run_privileged_service",
            "env": {
                "SERVICE_MANIFEST_PATH": "service_manifest.yml",
                "PRIVILEGED": "true",
                "SERVICE_PATH": "elfparser.elfparser.ELFPARSER",
                "TASKING_DIR": "/tmp/ELFPARSER"
            },
            "console": "internalConsole",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
        },
        {
            "name": "Generate Sample Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "tests.gentests",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
        },
    ]
}
